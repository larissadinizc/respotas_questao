# Define a string a ser invertida
texto = "Exemplo de string a ser invertida"

# Converte a string em uma lista de caracteres
lista_caracteres = list(texto)

# Inverte a ordem dos caracteres na lista
for i in range(len(lista_caracteres) // 2):
    j = len(lista_caracteres) - i - 1
    lista_caracteres[i], lista_caracteres[j] = lista_caracteres[j], lista_caracteres[i]

# Converte a lista de volta para uma string
texto_invertido = "".join(lista_caracteres)

# Exibe o resultado
print(texto_invertido)
